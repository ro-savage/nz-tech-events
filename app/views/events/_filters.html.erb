<div class="filters">
  <div>
    <label for="filter-region">Region</label>
    <select id="filter-region">
      <option value="">All Regions</option>
      <% region_options.each do |label, value| %>
        <option value="<%= value %>"><%= label %></option>
      <% end %>
    </select>
  </div>

  <div>
    <label for="filter-city">City</label>
    <select id="filter-city">
      <option value="">All Cities</option>
    </select>
  </div>

  <div>
    <label for="filter-event-type">Event Type</label>
    <select id="filter-event-type">
      <option value="">All Types</option>
      <% event_type_options.each do |label, value| %>
        <option value="<%= value %>"><%= label %></option>
      <% end %>
    </select>
  </div>

  <div>
    <label for="filter-month">Month</label>
    <select id="filter-month">
      <option value="">All Months</option>
      <% month_filter_options.each do |label, value| %>
        <option value="<%= value %>"><%= label %></option>
      <% end %>
    </select>
  </div>

  <div class="filter-actions">
    <a href="#" id="filter-clear" style="display: none;">Clear filters</a>
  </div>
</div>

<div id="no-results-message" class="empty-state" style="display: none;">
  <h3>No events match your filters</h3>
  <p><a href="#" onclick="clearFilters(); return false;">Clear filters</a> to see all events</p>
</div>

<script type="text/javascript">
  window.filterConfig = {
    citiesByRegion: <%= cities_json %>,
    storageKey: 'nzTechEventsFilters',
    initialRegion: '<%= @initial_region || '' %>',
    initialCity: '<%= @initial_city || '' %>'
  };
</script>
